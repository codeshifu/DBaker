<resources>

    <!--custom Theme-->
    <style name="Theme.Recipe" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.Recipe.CollapsingToolbar" parent="">
        <item name="collapsedTitleTextAppearance">@style/TextAppearance.Recipe.Logo</item>
        <item name="contentScrim">?attr/colorPrimary</item>
        <item name="expandedTitleGravity">top</item>
        <item name="expandedTitleMarginStart">60dp</item>
        <item name="expandedTitleMarginTop">140dp</item>
        <item name="expandedTitleTextAppearance">@style/TextAppearance.Recipe.Logo.Expanded</item>
    </style>

    <style name="Widget.Recipe.CollapsingToolbarContent" parent="">
        <item name="android:layout_marginTop">160dp</item>
        <item name="android:layout_marginLeft">80dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TextAppearance.Recipe.Logo" parent="TextAppearance.AppCompat.Display3">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Recipe.Logo.Expanded">
        <item name="android:textSize">32sp</item>
    </style>

</resources>
